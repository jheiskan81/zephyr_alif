/dts-v1/;

#include <alif/ensemble/common/e7_appkit.dtsi>
#include <alif/ensemble/common/ensemble_rtss_he.dtsi>
#include "../common/ensemble-e7-appkit-pinctrl.dtsi"

/ {
	compatible = "arm,alif-e7-ak-ae722f80f55d5xx-rtss-he";
	#address-cells = <1>;
	#size-cells = <1>;

	chosen {
		zephyr,flash = &mram_storage;
		zephyr,code-partition = &slot0_partition;
		zephyr,sram = &dtcm;
		zephyr,console = &uart2;
		zephyr,shell-uart = &uart2;
	};

	aliases {
		led0 = &aled0;
		pwm-led0 = &pwm_led1_red;
		sw0 = &button0;
		watchdog0 = &wdog0;
	};

	leds {
		compatible = "gpio-leds";
		aled0: led_0 {
			gpios = <&gpio6 4 0>;
			label = "LED1_G";
		};
	};
	pwmleds {
		compatible = "pwm-leds";
		pwm_led1_red: pwm_led_1 {
			pwms = <&pwm5 0 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "RED PWM LED 1";
		};
	};
	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = < &lpgpio 4 0 >;
			label = "SW0";
		};
	};
};

&gpio6 {
	status = "okay";
};

&uart2 {
	status = "okay";
};

&utimer5 {
	status = "okay";

	pwm5: pwm {
		pinctrl-0 = <&pinctrl_ut5>;
		pinctrl-names = "default";
		status = "okay";
	};
};
